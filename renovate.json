{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranchPatterns": ["dev"],
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":semanticCommitTypeAll(chore)"
  ],
  "schedule": ["before 3am on Monday"],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "prConcurrentLimit": 3,
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  }
}
